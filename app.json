{
  "expo": {
    "name": "Poll",
    "slug": "Poll",
    "scheme": "notJustPolls",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/poll.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/poll.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "width":"50%"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/poll.png"
    },
    "plugins": [
      "expo-secure-store"
    ]
  }
}
